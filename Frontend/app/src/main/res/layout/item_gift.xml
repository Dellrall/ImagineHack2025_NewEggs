<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/giftImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/redeem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/giftNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Gift Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/redeemButton"
        app:layout_constraintStart_toEndOf="@id/giftImageView"
        app:layout_constraintTop_toTopOf="@id/giftImageView" />

    <TextView
        android:id="@+id/giftPointsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="100 points"
        app:layout_constraintEnd_toStartOf="@id/redeemButton"
        app:layout_constraintStart_toEndOf="@id/giftImageView"
        app:layout_constraintTop_toBottomOf="@id/giftNameTextView" />

    <Button
        android:id="@+id/redeemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>